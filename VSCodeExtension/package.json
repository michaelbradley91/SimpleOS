{
	"name": "simple-os",
	"displayName": "Simple OS",
	"description": "An extension to support the Simple OS syntax",
	"author": "Michael Bradley",
	"license": "MIT",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/michaelbradley91/SimpleOS"
	},
	"icon": "sos_icon.png",
	"publisher": "Michael Bradley",
	"categories": [
		"Language Packs"
	],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.75.0"
	},
	"main": "./client/out/client/src/extension",
	"contributes": {
		"jsonValidation": [
			{
				"fileMatch": "*.sos.json",
				"url": "./simple-os-config-schema.json"
			}
		],
		"commands":[
			{
				"command": "simpleOS.build",
				"title": "Compile Simple OS Executable"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Simple OS Configuration",
			"properties": {
				"simpleOS.working_directory": {
					"scope": "resource",
					"type": "string",
					"default": "",
					"description": "Controls the maximum number of problems produced by the server."
				},
				"simpleOS.program_configuration": {
					"scope": "resource",
					"type": "string",
					"default": "",
					"description": "The location of your program's JSON configuration file."
				}
			}
		},
		"languages": [
			{
				"id": "sos",
				"aliases": [
					"SimpleOS",
					"simpleos",
					"SOS"
				],
				"extensions": [
					".sos",
					".sox"
				],
				"configuration": "./language-configuration.json",
				"icon": {
					"dark": "telephone-receiver.png",
					"light": "telephone-receiver.png"
				}
			}
		],
		"grammars": [
			{
				"language": "sos",
				"scopeName": "source.sos",
				"path": "./syntaxes/sos.tmLanguage.json",
				"tokenTypes": {
					"source.sos": "other"
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh",
		"compiler-tests": "mocha  --require ts-node/register \"./server/src/compiler/tests/**/*.ts\"",
		"compile-sos": "ts-node server/src/compiler/src/main.ts",
		"start": "ts-node server/src/compiler/src/main.ts -- example/example.sos"
	},
	"dependencies": {
		"@types/node": "^20.2.4",
		"ts-node": "^6.0.1"
	},
	"devDependencies": {
		"@types/mocha": "^9.1.0",
		"@types/node": "^16.18.34",
		"@types/tmp": "^0.2.3",
		"@typescript-eslint/eslint-plugin": "^5.54.0",
		"@typescript-eslint/parser": "^5.54.0",
		"eslint": "^8.35.0",
		"mocha": "^9.2.2",
		"tmp": "^0.2.1",
		"ts-node-dev": "^2.0.0",
		"typescript": "^5.1.3"
	}
}
